{
  "name": "dashboard-esportivo-backend",
  "version": "1.0.0",
  "description": "Backend API for Dashboard Esportivo - Interclasse 2025",
  "main": "src/index.ts",
  "scripts": {
    "dev": "ts-node src/index.ts",
    "dev:watch": "ts-node --watch src/index.ts",
    "build": "tsc",
    "build:render": "npm install && npx prisma generate && npm run build && npm run build:seed && npx prisma migrate deploy && npx prisma db seed",
    "build:seed": "tsc --project tsconfig.seed.json",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "lint": "eslint src --ext .ts --fix",
    "lint:check": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:reset": "prisma migrate reset",
    "prisma:seed": "ts-node prisma/seed.ts",
    "prisma:seed:prod": "node dist/seed.js",
    "docker:build": "docker build -t dashboard-esportivo-backend .",
    "docker:run": "docker run -p 3000:3000 dashboard-esportivo-backend",
    "health:check": "curl http://localhost:3000/api/health",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "logs:clear": "rm -f *.log",
    "clean": "rm -rf dist coverage node_modules/.cache",
    "precommit": "npm run type-check",
    "simulate:volleyball": "ts-node src/utils/volleyballSimulation.ts",
    "test:volleyball": "ts-node src/utils/volleyballTest.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.17.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20",
    "@types/pg": "^8.15.5",
    "axios": "^1.12.2",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "glob": "^11.0.3",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "lru-cache": "^11.1.0",
    "mysql2": "^3.14.2",
    "node-cron": "^4.2.1",
    "pg": "^8.16.3",
    "pino": "^9.9.0",
    "pino-pretty": "^13.1.1",
    "zod": "^4.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/jest": "^30.0.0",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^9.34.0",
    "jest": "^30.1.3",
    "prisma": "^6.17.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "prisma": {
    "seed": "node dist/prisma/seed.js"
  }
}